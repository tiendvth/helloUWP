        <TextBox x:ConnectionId='3' x:Name="txtusername" HorizontalAlignment="Left" Margin="234,159,0,0" Text="please enter username" TextWrapping="Wrap" VerticalAlignment="Top" Width="428" Height="57" Foreground="#FF8D8080" FontSize="30" HighContrastAdjustment="Application"/>
        <TextBlock x:ConnectionId='4' HorizontalAlignment="Left" Margin="65,294,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Height="54"                                               FontSize="30"/>
