        <TextBox x:ConnectionId='9' x:Name="txtEmail" HorizontalAlignment="Left" Margin="236,589,0,0" Text="please enter username" TextWrapping="Wrap" VerticalAlignment="Top" Width="428" Height="57" Foreground="#FF8D8080" FontSize="30"/>
        <Button x:ConnectionId='10' Content="Submit" Margin="237,714,0,0" VerticalAlignment="Top" Width="175" Height="52" FontSize="30"                    />
        <Button Content="reset" Margin="442,713,0,0" VerticalAlignment="Top" Width="145" Height="52" FontSize="30"/>

    </Grid>
</Page>

