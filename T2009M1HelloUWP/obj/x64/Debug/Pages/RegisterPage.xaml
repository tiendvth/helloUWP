<Page
    x:Class="T2009M1HelloUWP.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T2009M1HelloUWP.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <ScrollViewer>
  <StackPanel Margin="0 10 0 20">
    <TextBlock Text="Register form" Margin="20 20 0 10"
               FontSize="20" FontWeight="Bold"/>
      <StackPanel Orientation="Horizontal" Margin="20 10 0 0">
        <TextBox Header="First name" Width="300"
                 PlaceholderText="Please enter your first name" Margin="0 0 20 0"/>
        <TextBox Header="Last Name" Width="300"
                 PlaceholderText="Please enter your first name"/>
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="20 10 0 0">
        <PasswordBox Header="Password" Width="300"
                     PlaceholderText="Please enter your password" Margin="0 0 20 0"/>
        <PasswordBox Header="Confirm Password" Width="300"
                     PlaceholderText="Please enter your password"/>
       </StackPanel>
      <TextBox Header="Address" Margin="20 10 0 0" Width="620" Height="100"
                 PlaceholderText="Please enter your first name" HorizontalAlignment="Left"/>
      <TextBox Header="Phone" Margin="20 10 0 0" Width="300" 
                 PlaceholderText="Please enter your Phone" HorizontalAlignment="Left"/>
      <TextBox Header="Avatar" Margin="20 10 0 0" Width="620"
                 PlaceholderText="Please enter your avatar" HorizontalAlignment="Left"/>
            <TextBox Header="gender" Margin="20 10 0 0"/>

            <StackPanel Orientation="Horizontal" Margin="20 10 0 0">
        <RadioButton Content="Male" GroupName="gender" IsChecked="True"/> 
        <RadioButton Content="Female" GroupName="gender"/> 
        <RadioButton Content="Other" GroupName="gender"/>
     </StackPanel>
      <TextBox Header="Email" Margin="20 10 0 0" 
                PlaceholderText="Please enter your email" HorizontalAlignment="Left"/>
      <DatePicker Header="Birthday" Margin="20 10 0 0"/>
      <StackPanel Orientation="Horizontal" Margin="20 10 0 0">
       <Button Content="Submit" Width="120" Margin="0 0 10 0"/>
       <Button Content="Reset" Width="120"/>
     </StackPanel>
    </StackPanel>
  </ScrollViewer>
</Page>

